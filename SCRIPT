// JavaScript Document
function deleterecord( id, name ) {
	
	if( id != "" ) {
		
		if( confirm( "Are you sure want to delete " + name + " contact" ) ) {
			window.location = "deletecontact.php?id="+id;
		}
		
	} else {
		alert("In Valid Request");
	}
	
}


function updaterecord( id ) {
	
	if( id !="" ) {
		window.location = "updatecontactform.php?id="+id;
	} else {
		alert("In Valid Request");
	}
	
}


function cancelrecord( id ) {
	
	if( id !="" ) {
		window.location = "cancellation.php?id="+id;
	} else {
		alert("In Valid Request");
	}
	
}


function book( bn ) {
	
	if( bn != "" ) {
		window.location = "reservationform.php?bn="+bn;
	} else {
		alert("In Valid Request");
	}
	
}
